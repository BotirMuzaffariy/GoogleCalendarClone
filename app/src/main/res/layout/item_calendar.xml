<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.gjiazhe.scrollparallaximageview.ScrollParallaxImageView
            android:id="@+id/iv_month_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/i_06_jun" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#1F1F1F"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp">

        <TextView
            android:id="@+id/tv_week1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="48dp"
            android:text="unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_week2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="48dp"
            android:text="unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_week3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="48dp"
            android:text="unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_week4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="48dp"
            android:text="unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_week5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="48dp"
            android:text="unknown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>